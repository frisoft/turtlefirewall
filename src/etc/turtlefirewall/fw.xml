<firewall>

<options>
<option value="off" name="rp_filter"/>
<option name="drop_invalid_fin_notack" value="off"/>
<option value="off" name="nf_conntrack_helper"/>
<option value="off" name="drop_invalid_all"/>
<option name="nf_conntrack_max" value="262144"/>
<option value="on" name="blacklist_feature"/>
<option value="off" name="drop_invalid_state"/>
<option name="log_martians" value="on"/>
<option value="60" name="log_limit"/>
<option name="log_limit_burst" value="5"/>
<option value="on" name="drop_invalid_syn_rst"/>
<option value="on" name="drop_invalid_fragment"/>
<option name="drop_invalid_syn_fin" value="on"/>
<option value="off" name="drop_invalid_none"/>
</options>

<zone description="" if="eth0" name="lan"/>
<zone if="eth1" description="" name="primarywan"/>





<group name="internet" description="Internet">
	<item name="primarywan"/>
</group>




<masquerade dst="primarywan" service="all" src="*"/>
<masquerade src="*" active="NO" dst="lan" service="all"/>


<rule src="FIREWALL" description="Firewall to Anyware" dst="*" service="all" target="ACCEPT"/>
<rule src="internet" description="Internet to Firewall" dst="FIREWALL" target="ACCEPT" service="icmp_all,openvpn"/>
<rule service="dns,http,icmp_all,imap,logio,ntop,ntp,pop3,proxy8080,shellinabox,smtp,ssh,unifi,webmin" target="ACCEPT" dst="FIREWALL" src="lan" description="Lan To Firewall"/>
<rule src="lan" description="Lan to Internet" service="ftp,http,https,icmp_all,imap,imaps,ntp,pop3,pop3s,smtp587,smtps" target="ACCEPT" dst="internet" log="YES"/>



<conntrackpreroute helper="ftp" port="21" src="lan" service="tcp" dst="*"/>
<conntrackpreroute port="5060" helper="sip" src="lan" service="tcp" dst="*"/>
<conntrackpreroute dst="*" service="udp" src="lan" port="5060" helper="sip"/>
<conntrackpreroute dst="*" service="tcp" src="lan" port="1723" helper="pptp"/>

</firewall>
