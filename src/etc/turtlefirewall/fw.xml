<firewall>

<options>
<option name="drop_invalid_syn_rst" value="on"/>
<option name="drop_invalid_none" value="off"/>
<option name="log_martians" value="on"/>
<option name="drop_invalid_fragment" value="on"/>
<option name="drop_invalid_state" value="off"/>
<option name="drop_invalid_syn_fin" value="on"/>
<option name="drop_invalid_fin_notack" value="off"/>
<option name="drop_invalid_all" value="off"/>
<option name="rp_filter" value="off"/>
<option name="ftp_modules" value="on"/>
<option name="tftp_modules" value="on"/>
<option name="sip_modules" value="on"/>
<option name="pptp_modules" value="on"/>
<option name="h323_modules" value="on"/>
<option name="blacklist_feature" value="on"/>
<option name="nf_conntrack_max" value="262144"/>
<option name="log_limit" value="60"/>
<option name="log_limit_burst" value="5"/>
</options>

<zone description="" name="primarywan" if="eth1"/>
<zone if="eth0" description="" name="lan"/>





<group name="internet" description="Internet">
	<item name="primarywan"/>
</group>




<masquerade dst="primarywan" service="all" src="*"/>
<masquerade src="*" dst="lan" service="all" active="NO"/>


<rule src="FIREWALL" target="ACCEPT" service="all" dst="*" description="Firewall to Anyware"/>
<rule dst="FIREWALL" service="icmp_all,openvpn" target="ACCEPT" description="Internet to Firewall" src="internet"/>
<rule description="Lan To Firewall" target="ACCEPT" dst="FIREWALL" service="dns,http,icmp_all,imap,logio,ntop,ntp,pop3,proxy8080,shellinabox,smtp,ssh,unifi,webmin" src="lan"/>
<rule description="Lan to Internet" dst="internet" target="ACCEPT" service="ftp,http,https,icmp_all,imap,imaps,ntp,pop3,pop3s,smtp587,smtps" log="YES" src="lan"/>



</firewall>
