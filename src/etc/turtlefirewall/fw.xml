<firewall>

<options>
<option value="on" name="drop_invalid_syn_rst"/>
<option name="drop_invalid_fin_notack" value="off"/>
<option name="drop_invalid_none" value="off"/>
<option value="on" name="drop_invalid_syn_fin"/>
<option value="on" name="blacklist_feature"/>
<option value="on" name="drop_invalid_fragment"/>
<option value="on" name="nf_conntrack_helper"/>
<option name="drop_invalid_state" value="off"/>
<option name="nf_conntrack_max" value="262144"/>
<option name="drop_invalid_all" value="off"/>
<option value="off" name="rp_filter"/>
<option value="60" name="log_limit"/>
<option name="log_martians" value="on"/>
<option name="log_limit_burst" value="5"/>
</options>

<zone description="" name="primarywan" if="eth1"/>
<zone description="" if="eth0" name="lan"/>





<group name="internet" description="Internet">
	<item name="primarywan"/>
</group>




<masquerade dst="primarywan" src="*" service="all"/>
<masquerade src="*" service="all" active="NO" dst="lan"/>


<rule target="ACCEPT" service="all" src="FIREWALL" description="Firewall to Anyware" dst="*"/>
<rule description="Internet to Firewall" dst="FIREWALL" target="ACCEPT" src="internet" service="icmp_all,openvpn"/>
<rule src="lan" service="dns,http,icmp_all,imap,logio,ntop,ntp,pop3,proxy8080,shellinabox,smtp,ssh,unifi,webmin" target="ACCEPT" dst="FIREWALL" description="Lan To Firewall"/>
<rule service="ftp,http,https,icmp_all,imap,imaps,ntp,pop3,pop3s,smtp587,smtps" target="ACCEPT" log="YES" src="lan" description="Lan to Internet" dst="internet"/>




</firewall>
